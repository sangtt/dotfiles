#!/usr/bin/env bash

# Makes using `grep` all that much easier. Where;
# i: case insensitive
# n: line number
# l: list of filenames instead of contexts
# r: recursive
alias    grp="grep -i -n -r --color --exclude *.map --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir dist --exclude-dir docs --exclude-dir jspm_packages --exclude-dir node_modules --exclude-dir reports --exclude-dir typings"
alias   grpr="grep -i -n -r --color --exclude *.map --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir dist --exclude-dir docs --exclude-dir jspm_packages --exclude-dir node_modules --exclude-dir reports --exclude-dir typings"
alias   grpl="grep -i -l -r --color --exclude *.map --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir dist --exclude-dir docs --exclude-dir jspm_packages --exclude-dir node_modules --exclude-dir reports --exclude-dir typings"
alias  grprl="grep -i -l -r --color --exclude *.map --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir dist --exclude-dir docs --exclude-dir jspm_packages --exclude-dir node_modules --exclude-dir reports --exclude-dir typings"
alias   grps="grep    -n -r --color --exclude *.map --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir dist --exclude-dir docs --exclude-dir jspm_packages --exclude-dir node_modules --exclude-dir reports --exclude-dir typings"
alias  grprs="grep    -n -r --color --exclude *.map --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir dist --exclude-dir docs --exclude-dir jspm_packages --exclude-dir node_modules --exclude-dir reports --exclude-dir typings"
alias  grpls="grep    -l -r --color --exclude *.map --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir dist --exclude-dir docs --exclude-dir jspm_packages --exclude-dir node_modules --exclude-dir reports --exclude-dir typings"
alias grprls="grep    -l -r --color --exclude *.map --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir dist --exclude-dir docs --exclude-dir jspm_packages --exclude-dir node_modules --exclude-dir reports --exclude-dir typings"

# Allow for typos
alias   grrp="grpr"
alias   gprr="grpr"
alias  grplr="grprl"
alias  grrpl="grprl"

# vim: set syn=sh :
